<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sunrise Web Portal</title>

    <!-- UI Grid -->
    <link href="~/Scripts/libs/ui-grid/bower_components/angular-ui-grid/ui-grid.min.css" rel="stylesheet" type="text/css" />

    <!-- Other basic Style-->
    @Styles.Render("~/Content/css")

    <style>
        [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
            display: none !important;
        }
    </style>
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-app="mainApp" ng-cloak>
    <nav class="navbar navbar-inverse navbar-static-top" style="margin-bottom:0px;">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Sunrise Web Portal", "Index", "Contract", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        @Html.Partial("_LoginPartial")
        <div class="navbar-default sidebar" role="navigation">
            <div class="sidebar-nav navbar-collapse">
                <ul class="nav" id="side-menu">
                    <li>
                        <a href="#"><i class="fa fa-bar-chart-o fa-fw"></i> Contracts <span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="@Url.Action("index","contract")">List Contracts</a>
                            </li>
                        </ul>
                        <!-- /.nav-second-level -->
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-bar-chart-o fa-fw"></i> Accounts <span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="@Url.Action("index","receivable")">Invoice</a>
                            </li>
                        </ul>
                        <!-- /.nav-second-level -->
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-bar-chart-o fa-fw"></i> Master File <span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="@Url.Action("Index","Villa")">Villa Master File</a>
                            </li>
                        </ul>
                        <!-- /.nav-second-level -->
                    </li>
                </ul>
            </div>
            <!-- /.sidebar-collapse -->
        </div>
        <!-- /.navbar-static-side -->
    </nav>

    <div id="page-wrapper" style="min-height:950px">
        @RenderBody()
        <hr />
        <footer>
            <p>Sunrise Web Portal ver 1.1 - &copy; @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/ui-bootstrap")
    @Scripts.Render("~/bundles/app")

    <!-- UI Grid -->
    <script src="~/Scripts/libs/ui-grid/bower_components/angular-ui-grid/ui-grid.min.js"></script>


    <!--CDN link for  TweenMax-->
    <script src="http://cdnjs.cloudflare.com/ajax/libs/gsap/1.19.0/TweenMax.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>



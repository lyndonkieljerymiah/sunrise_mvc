@using Sunrise.Client.Domains.ViewModels
@using Sunrise.Client.Domains.ViewModels.Identity
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}


<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sunrise Web Portal</title>
    @Styles.Render("~/Content/login")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div class="login-container">
        <section class="login">
            <header>
                <h4>Use a local account to log in.</h4>
            </header>
            @using (Html.BeginForm("Login", "Account", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "login-form", role = "form"}))
            {
                @Html.AntiForgeryToken()
                @Html.TextBoxFor(m => m.Email, new {@class = "login-input", placeholder = "User", required = "required", autofocus = "autofocus"})
                @Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})

                @Html.PasswordFor(m => m.Password, new {@class = "login-input", placeholder = "Password", required = "required"})
                @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})
                <div class="submit-container">
                    <button class="login-button">Log in</button>
                </div>
            }
        </section>
    </div>
</body>
</html>

@section LoginScripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

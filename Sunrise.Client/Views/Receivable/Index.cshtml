@model Sunrise.Client.Domains.ViewModels.BillingViewModel
@{
    ViewBag.Title = "Payment Clearing";
}
<div ng-controller="receivableController">
    <spinner></spinner>
    <toaster-container toaster-options="{'time-out': 3000, 'close-button':true, 'animation-class': 'toast-top-right'}"></toaster-container>
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h4>@ViewBag.Title</h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 pull-left">
            <div class="form-group">
                <div class="input-group">
                    <input type="text"
                           name="villaNo" id="villaNo"
                           class="form-control"
                           placeholder="Search Contract No..."
                           ng-model="ctrl.txtSearch" />
                    <span class="input-group-btn">
                        <button class="btn btn-primary" ng-click="ctrl.action.searchContract()">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>
            </div>
        </div>
        <div class="col-md-3 pull-right">
            <div class="pull-right">
                <button class="btn btn-sm btn-primary"><i class="fa fa-2x fa-print"></i></button>
                <button class="btn btn-sm btn-primary" ng-click="ctrl.action.reverse()" ng-show="ctrl.showReverse"><i class="fa fa-2x fa-trash-o"></i></button>
            </div>
        </div>
    </div>
    <div class="col-md-12" style="margin:10px 0"></div>

    <div class="row">
        <div class="col-md-9">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h5 class="panel-title">Tenant Information</h5>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-2">Name:</div>
                        <div class="col-md-10">{{ctrl.data.name}}</div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">Address:</div>
                        <div class="col-md-10">{{ctrl.data.address}}</div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-condensed table-striped table-bordered">
                                <tr>
                                    <th>Villa</th>
                                    <th>Period Start</th>
                                    <th>Period End</th>
                                    <th>Amount</th>
                                    <th>Monthly Payable</th>
                                </tr>
                                <tr>
                                    <td>{{ctrl.data.villaNo}}</td>
                                    <td>{{ctrl.data.periodStart | date: 'MM/dd/yyyy'}}</td>
                                    <td>{{ctrl.data.periodEnd | date: 'MM/dd/yyyy'}}</td>
                                    <td>{{ctrl.data.amount | currency: 'QR '}}</td>
                                    <td>{{ctrl.data.ratePerMonth | currency: 'QR '}}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <uib-tabset>
                <uib-tab tabindex="0" heading="Cheque Payment">
                    <!-- payment -->
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-condensed table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Cheque No</th>
                                        <th>Bank</th>
                                        <th>Mode</th>
                                        <th>From</th>
                                        <th>To</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Remarks</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="payment in ctrl.data.payments">
                                        <td>{{payment.paymentDate | date:'MM/dd/yyyy'}}</td>
                                        <td>{{payment.chequeNo}}</td>
                                        <td>{{payment.bankDescription}}</td>
                                        <td>{{payment.paymentModeDescription}}</td>
                                        <td>{{payment.periodStart | date:'MM/dd/yyyy'}}</td>
                                        <td>{{payment.periodEnd | date: 'MM/dd/yyyy'}}</td>
                                        <td>{{payment.amount | currency: 'QR '}}</td>
                                        <td>{{payment.statusDescription}}</td>
                                        <td>{{payment.remarks}}</td>
                                        <td class="text-center">
                                            <a href="#" ng-show="payment.isReceived" class="btn btn-xs btn-primary" ng-click="ctrl.action.editPayment(payment)">
                                                <i class="fa fa-pencil"></i>
                                            </a>
                                            
                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- end payment -->
                </uib-tab>
                <uib-tab index="1" heading="Reconcile Payment">
                    <div class="body-content">
                        <div class="row">
                            <div class="col-md-12">
                                <button class="btn btn-success" ng-click="ctrl.action.addReconciledPayment()">Add Reconcile</button>
                            </div>
                        </div>
                    </div>
                    <!-- reconcile -->
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-condensed table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Reference No</th>
                                        <th>Payment Type</th>
                                        <th>Bank</th>
                                        <th>Dishonored Amount</th>
                                        <th>Amount</th>
                                        <th>Period Start</th>
                                        <th>Period End</th>
                                        <th>Remarks</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="reconcile in ctrl.data.reconciles">
                                        <td>{{reconcile.date | date:'MM/dd/yyyy'}}</td>
                                        <td>{{reconcile.referenceNo}}</td>
                                        <td>{{reconcile.paymentTypeDescription}}</td>
                                        <td>{{reconcile.bankDescription}}</td>
                                        <td>{{reconcile.dishonouredAmount | currency:'QR '}}</td>
                                        <td>{{reconcile.amount | currency:'QR '}}</td>
                                        <td>{{reconcile.periodStart| date:'MM/dd/yyyy'}}</td>
                                        <td>{{reconcile.periodEnd| date:'MM/dd/yyyy'}}</td>
                                        <td>{{reconcile.remarks}}</td>
                                        <td class="text-center">
                                            <button class="btn btn-xs btn-primary" ng-click="ctrl.action.editReconciledPayment(reconcile)"><i class="fa fa-edit"></i></button>&nbsp;
                                            <button class="btn btn-xs btn-danger" ng-click="ctrl.action.removeReconciledPayment(reconcile)"><i class="fa fa-trash"></i></button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- end payment -->
                </uib-tab>
            </uib-tabset>
            <hr />
            <div class="row">
                <div class="col-md-2 pull-right">
                    <button class="btn btn-danger btn-block" ng-click="ctrl.action.update()">Update</button>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="well">
                <strong class="text-success text-center">Contract Status: {{ctrl.data.transactionStatusDescription}}</strong>
            </div>
            <div class="well">
                <div class="row">
                    <div class="col-md-5">
                        <p class="text-danger"><i class="fa fa-money"></i> Received:</p>
                    </div>
                    <div class="col-md-7 text-right">
                        <strong class="text-danger">{{ctrl.data.totalReceived | currency : "QR "}}</strong>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-5">
                        <p class="text-danger"><i class="fa fa-money"></i> Cleared:</p>
                    </div>
                    <div class="col-md-7 text-right">
                        <strong class="text-danger">{{ctrl.data.totalCleared | currency : "QR "}}</strong>
                    </div>
                </div>
                <hr />
                <!-- balance-->
                <div class="row">
                    <div class="col-md-5">
                        <p class="text-danger"><i class="fa fa-money"></i> Balance:</p>
                    </div>
                    <div class="col-md-7 text-right">
                        <strong class="text-danger">{{ctrl.data.balance | currency : "QR "}}</strong>
                    </div>
                </div>
                <!--end component-->
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/app/data/receivable-manager.data.js"></script>
    <script src="~/Scripts/app/controller/receivableController.js"></script>
}



@model Sunrise.Client.Domains.ViewModels.BillingViewModel
@{
    ViewBag.Title = "Payment Clearing";
}
<div ng-controller="receivableController">
    <spinner></spinner>
    <toaster-container toaster-options="{'time-out': 3000, 'close-button':true, 'animation-class': 'toast-top-right'}"></toaster-container>
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h4>@ViewBag.Title</h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 pull-left">
            <div class="form-group">
                <div class="input-group">
                    <input type="text"
                           name="villaNo" id="villaNo"
                           class="form-control"
                           placeholder="Search Bill No..."
                           ng-model="model.txtSearch" />
                    <span class="input-group-btn">
                        <button class="btn btn-primary" ng-click="model.action.searchContract()">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>
            </div>
        </div>
        <div class="col-md-3 pull-right">
            <div class="pull-right">
                <button class="btn btn-sm btn-primary"><i class="fa fa-2x fa-print"></i></button>
                <button class="btn btn-sm btn-primary"><i class="fa fa-2x fa-trash-o"></i></button>
            </div>
        </div>
    </div>
    <div class="col-md-12" style="margin:10px 0"></div>

    <div class="row">
        <div class="col-md-9">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h5 class="panel-title">Tenant Information</h5>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-2">Name:</div>
                        <div class="col-md-10">{{model.data.name}}</div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">Address:</div>
                        <div class="col-md-10">{{model.data.address}}</div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-condensed table-striped table-bordered">
                                <tr>
                                    <th class="text-center">Villa</th>
                                    <th class="text-center">Period Start</th>
                                    <th class="text-center">Period End</th>
                                    <th class="text-center">Amount</th>
                                    <th class="text-center">Monthly Payable</th>
                                </tr>
                                <tr>
                                    <td class="text-center">{{model.data.villaNo}}</td>
                                    <td class="text-center">{{model.data.periodStart | date: 'MM/dd/yyyy'}}</td>
                                    <td class="text-center">{{model.data.periodEnd | date: 'MM/dd/yyyy'}}</td>
                                    <td class="text-center">{{model.data.amount | currency: 'QR '}}</td>
                                    <td class="text-center">{{model.data.ratePerMonth | currency: 'QR '}}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <uib-tabset>
                <uib-tab tabindex="0" heading="Cheque Payment">
                    <!-- payment -->
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-condensed table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th class="text-center">Date</th>
                                        <th class="text-center">Cheque No</th>
                                        <th class="text-center">Bank</th>
                                        <th class="text-center">Mode</th>
                                        <th class="text-center">From</th>
                                        <th class="text-center">To</th>
                                        <th class="text-center">Amount</th>
                                        <th class="text-center">Status</th>
                                        <th class="text-center">Remarks</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="payment in model.data.payments | orderBy : 'paymentDate':reverse track by $index">
                                        <td class="text-center">{{payment.paymentDate | date:'MM/dd/yyyy'}}</td>
                                        <td class="text-center">{{payment.chequeNo}}</td>
                                        <td class="text-center">{{payment.bankDescription}}</td>
                                        <td class="text-center">{{payment.paymentModeDescription}}</td>
                                        <td class="text-center">{{payment.periodStart | date:'MM/dd/yyyy'}}</td>
                                        <td class="text-center">{{payment.periodEnd | date: 'MM/dd/yyyy'}}</td>
                                        <td class="text-center">{{payment.amount | currency: 'QR '}}</td>
                                        <td class="text-center">
                                            <button href="#"
                                                    class="btn btn-xs btn-success"
                                                    uib-popover-template="payment.editTemplate"
                                                    popover-title="Status - {{payment.statusDescription}}">
                                                {{payment.statusDescription}}
                                            </button>
                                        </td>
                                        <td class="text-center">{{payment.remarks}}</td>
                                        <td class="text-center">
                                            <a href="#"
                                               class="btn btn-xs btn-primary" 
                                               ng-click="model.action.editPayment(payment)"
                                               tooltip-placement="top" uib-tooltip="Edit Payment">
                                                <i class="fa fa-pencil"></i>
                                            </a>
                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                            <!-- template -->
                            <script type="text/ng-template" id="template.html">
                                <div>Status Editing</div>
                                <div class="form-group">
                                    <label>Popup Title:</label>
                                    <input type="text" class="form-control">
                                </div>
                            </script>
                            <!-- end template -->

                        </div>
                    </div>
                    <!-- end payment -->
                </uib-tab>
                <uib-tab index="1" heading="Reconcile Payment">
                    <div class="body-content">
                        <div class="row">
                            <div class="col-md-12">
                                <button 
                                        class="btn btn-success" 
                                        ng-click="model.action.addReconciledPayment()" 
                                        tooltip-placement="top" 
                                        uib-tooltip="Add Reconcile">Add Reconcile</button>
                            </div>
                        </div>
                    </div>
                    <!-- reconcile -->
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-condensed table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th class="text-center">Date</th>
                                        <th class="text-center">Reference No</th>
                                        <th class="text-center">Payment Type</th>
                                        <th class="text-center">Bank</th>
                                        <th class="text-center">Dishonored Amount</th>
                                        <th class="text-center">Amount</th>
                                        <th class="text-center">Period Start</th>
                                        <th class="text-center">Period End</th>
                                        <th class="text-center">Remarks</th>
                                        <th class="text-center"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="reconcile in model.data.reconciles">
                                        <td class="text-center">{{reconcile.date | date:'MM/dd/yyyy'}}</td>
                                        <td class="text-center">{{reconcile.referenceNo}}</td>
                                        <td class="text-center">{{reconcile.paymentTypeDescription}}</td>
                                        <td class="text-center">{{reconcile.bankDescription}}</td>
                                        <td class="text-center">{{reconcile.dishonouredAmount | currency:'QR '}}</td>
                                        <td class="text-center">{{reconcile.amount | currency:'QR '}}</td>
                                        <td class="text-center">{{reconcile.periodStart| date:'MM/dd/yyyy'}}</td>
                                        <td class="text-center">{{reconcile.periodEnd| date:'MM/dd/yyyy'}}</td>
                                        <td class="text-center">{{reconcile.remarks}}</td>
                                        <td class="text-center">
                                            <button class="btn btn-xs btn-primary" ng-click="ctrl.action.editReconciledPayment(reconcile)"><i class="fa fa-edit"></i></button>&nbsp;
                                            <button class="btn btn-xs btn-danger" ng-click="ctrl.action.removeReconciledPayment(reconcile)"><i class="fa fa-trash"></i></button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- end reconcile -->
                </uib-tab>
            </uib-tabset>
            <hr />
            <div class="row">
                <div class="col-md-2 pull-right">
                    <button class="btn btn-danger btn-block" ng-click="model.action.update()" ng-show="model.enabledUpdate">Update</button>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="well">
                <strong class="text-success text-center">Contract Status: {{model.data.transactionStatusDescription}}</strong>
            </div>
            <div class="well">
                <div class="row">
                    <div class="col-md-5">
                        <p class="text-danger"><i class="fa fa-money"></i> Received:</p>
                    </div>
                    <div class="col-md-7 text-right">
                        <strong class="text-danger">{{model.data.totalReceived | currency : "QR "}}</strong>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-5">
                        <p class="text-danger"><i class="fa fa-money"></i> Cleared:</p>
                    </div>
                    <div class="col-md-7 text-right">
                        <strong class="text-danger">{{model.data.totalCleared | currency : "QR "}}</strong>
                    </div>
                </div>
                <hr />
                <!-- balance-->
                <div class="row">
                    <div class="col-md-5">
                        <p class="text-danger"><i class="fa fa-money"></i> Balance:</p>
                    </div>
                    <div class="col-md-7 text-right">
                        <strong class="text-danger">{{model.data.balance | currency : "QR "}}</strong>
                    </div>
                </div>
                <!--end component-->
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/app/data/receivable-manager.data.js"></script>
    <script src="~/Scripts/app/controller/receivableController.js"></script>
}



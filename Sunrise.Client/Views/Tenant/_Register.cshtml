@using Sunrise.Client.Infrastructure.Extension
@model Sunrise.Client.Domains.ViewModels.TenantRegisterViewModel

@{
    ViewBag.Controller = "model.data.register";
}
<div>
    <div class="form-group" model-state-attribute>
        <label class="col-md-3 text-right">Type:</label>
        <div class="col-md-9">
            @Html.NgDropdownFor(m => m.TenantType, "model.data.register.tenantTypes", (string)ViewBag.Controller)
        </div>
    </div>
    <div ng-show="model.data.register.isIndividual">
        <div class="form-group">
            <label for="name" class="col-md-3 text-right">Full Name:</label>
            <div class="col-md-9">
                @Html.NgInputFor(m => m.Name, (string)ViewBag.Controller)
                @Html.NgValidateFor(m => m.Name, (string)ViewBag.Controller)
            </div>
        </div>
        <div class="form-group">
            <label for="gender" class="col-md-3 text-right">Gender:</label>
            <div class="col-md-9">
                @Html.NgDropdownFor(m => m.Individual.Gender, "model.data.register.individual.genders", (string)ViewBag.Controller)
            </div>
        </div>
        <div class="form-group">
            <label for="qatarId" class="col-md-3 text-right">Qatar Id</label>
            <div class="col-md-9">
                @Html.NgInputFor(m => m.Individual.QatarId, (string)ViewBag.Controller)
                @Html.NgValidateFor(m => m.Individual.QatarId, (string)ViewBag.Controller)
            </div>
        </div>
        <div class="form-group">
            <label for="birthday" class="col-md-3 text-right">Birthday</label>
            <div class="col-md-9">
                @Html.NgDatePickerFor(m => m.Individual.Birthday, (string)ViewBag.Controller, "0")
                @Html.NgValidateFor(m => m.Individual.Birthday, (string)ViewBag.Controller)
            </div>
        </div>
        <div class="form-group">
            <label for="company" class="col-md-3 text-right">Company:</label>
            <div class="col-md-9">
                @Html.NgInputFor(m => m.Individual.Company, (string)ViewBag.Controller)
                @Html.NgValidateFor(m => m.Individual.Company, (string)ViewBag.Controller)
            </div>
        </div>
    </div>

    <div ng-show="!model.data.register.isIndividual">
        <div class="form-group">
            <label for="businessName" class="col-md-3 text-right">Business Name:</label>
            <div class="col-md-9">
                @Html.NgInputFor(m => m.Name, (string)ViewBag.Controller)
                @Html.NgValidateFor(m => m.Name, (string)ViewBag.Controller)
            </div>
        </div>
        <div class="form-group">
            <label for="businessType" class="col-md-3 text-right">Business Type:</label>
            <div class="col-md-9">
                @Html.NgInputFor(m => m.Company.BusinessType, (string)ViewBag.Controller)
                @Html.NgValidateFor(m => m.Company.BusinessType, (string)ViewBag.Controller)
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 text-right">CR No:</label>
            <div class="col-md-9">
                @Html.NgInputFor(m => m.Company.CrNo, (string)ViewBag.Controller)
                @Html.NgValidateFor(m => m.Company.CrNo, (string)ViewBag.Controller)
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 text-right">Validity Date:</label>
            <div class="col-md-9">
                @Html.NgDatePickerFor(m => m.Company.ValidityDate, (string)ViewBag.Controller, "0")
                @Html.NgValidateFor(m => m.Company.ValidityDate, (string)ViewBag.Controller)
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 text-right">Representative:</label>
            <div class="col-md-9">
                @Html.NgInputFor(m => m.Company.Representative, (string)ViewBag.Controller)
                @Html.NgValidateFor(m => m.Company.Representative, (string)ViewBag.Controller)
            </div>
        </div>
    </div>


    <!-- contact -->
    <div class="page-header">
        <strong>Contact Details</strong>
    </div>
    <div class="form-group">
        <label class="col-md-3 text-right">Email Address:</label>
        <div class="col-md-9">
            @Html.NgInputFor(m => m.EmailAddress, (string)ViewBag.Controller, "email")
            @Html.NgValidateFor(m => m.EmailAddress, (string)ViewBag.Controller)
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 text-right">Tel No:</label>
        <div class="col-md-9">
            @Html.NgInputFor(m => m.TelNo, (string)ViewBag.Controller)
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 text-right">Mobile No:</label>
        <div class="col-md-9">
            @Html.NgInputFor(m => m.MobileNo, (string)ViewBag.Controller)
            @Html.NgValidateFor(m => m.MobileNo, (string)ViewBag.Controller)
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 text-right">Fax No:</label>
        <div class="col-md-9">
            @Html.NgInputFor(m => m.FaxNo, (string)ViewBag.Controller)
        </div>
    </div>
    <!-- end contact-->
    <!-- address -->
    <div class="page-header">
        <strong>Company Address</strong>
    </div>
    <div class="form-group">
        <label class="col-md-3 text-right">Address 1:</label>
        <div class="col-md-9">
            @Html.NgInputFor(m => m.Address1, (string)ViewBag.Controller)
            @Html.NgValidateFor(m => m.Address1, (string)ViewBag.Controller)
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 text-right">Address 2:</label>
        <div class="col-md-9">
            @Html.NgInputFor(m => m.Address2, (string)ViewBag.Controller)
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 text-right">City:</label>
        <div class="col-md-9">
            @Html.NgInputFor(m => m.City, (string)ViewBag.Controller)
            @Html.NgValidateFor(m => m.City, (string)ViewBag.Controller)
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 text-right">Postal Code:</label>
        <div class="col-md-9">
            @Html.NgInputFor(m => m.PostalCode, (string)ViewBag.Controller)
            @Html.NgValidateFor(m => m.PostalCode, (string)ViewBag.Controller)
        </div>
    </div>
    <!-- end address-->
</div>

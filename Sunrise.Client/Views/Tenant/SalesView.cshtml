@model Sunrise.Client.Domains.ViewModels.SalesViewModel
<div>
    <div class="page-header">
        <h3>Choose Villa</h3>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.VillaNo, new { @class = "col-md-3 text-right" })
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.VillaNo, new { @class = "form-control", ng_model = "tenant.sales[0].villaNo", ng_blur = "checkAvailability()",ng_change="reset()"})
                    <strong ng-show="(showWarning && villaModel.status != 'Available')" class="text-danger">Not Available</strong>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.RentalType, new { @class = "col-md-3 text-right" })
                <div class="col-md-9">
                    @Html.DropDownListFor(m => m.RentalType, Model.RentalTypes, new { @class = "form-control", ng_model = "tenant.sales[0].rentalType" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ContractStatus, new { @class = "col-md-3 text-right" })
                <div class="col-md-9">
                    @Html.DropDownListFor(m => m.ContractStatus, Model.ContractStatuses, new { @class = "form-control", ng_model = "tenant.sales[0].contractStatus" })
                </div>
            </div>
            <div class="page-header">
                <strong>Period</strong>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PeriodStart, new { @class = "col-md-3 text-right" })
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.PeriodStart, new { @class = "form-control", ng_model = "tenant.sales[0].periodStart" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PeriodEnd, new { @class = "col-md-3 text-right" })
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.PeriodEnd, new { @class = "form-control", ng_model = "tenant.sales[0].periodEnd" })
                </div>
            </div>
            <hr />
            <div class="form-group">
                @Html.LabelFor(m => m.Amount, new { @class = "col-md-3 text-right" })
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", ng_model = "tenant.sales[0].amount" })
                </div>
            </div>
        </div>

        <!-- villa image component -->
        <div class="col-md-4 col-md-offset-1">
            <div class="row">
                <div class="col-md-12">
                    <div class="thumbnail" ng-show="villaModel">
                        <img ng-src="{{villaModel.picturePath}}"/>
                        <div class="caption">
                            <h3 class="text-danger">Status: {{villaModel.status}}</h3>
                            <ul>
                                <li><span class="text-primary">Villa No: {{villaModel.villaNo}} </span> </li>   
                                <li><span class="text-primary">Capacity: {{villaModel.capacity}} </span> </li>   
                                <li><span class="text-primary">Description: {{villaModel.description}} </span> </li>   
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--end  component -->
    </div>
</div>

@{
    ViewBag.Title = "Index";
}
<div ng-controller="shopController as $ctrl" ng-init="$ctrl.init()">
    <div class="jumbotron">
        <h1>Villa</h1>
        <p class="lead">Choose Villa</p>
    </div>
    <div class="row">
        <div class="col-md-2" ng-repeat="villa in villas track by villa.id" ng-show="villas">
            <div class="thumbnail">
                <img src="~/Content/imgs/villa-spalletti-1.jpg"/>
                <div class="caption">
                    <div>Villa No: {{villa.villaNo}}</div>
                    <p>Description:</p>
                    <small>{{villa.description}}</small>
                    <button class="btn btn-primary btn-block" ng-click="$ctrl.select(villa.id)">Select</button>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script src="~/Scripts/app/controller/shopController.js"></script>
}

@{
    ViewBag.Title = "Contract Renewal";
}

<div ng-controller="contractExpiryListController" ng-init="ctrl.action.loadContracts()">
    <spinner></spinner>
    <toaster-container toaster-options="{'time-out': 3000, 'close-button':true, 'animation-class': 'toast-top-right'}"></toaster-container>
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h4>@ViewBag.Title</h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div ui-grid="gridOptions" class="grid"></div>
        </div>
        <div class="col-md-3">
            <ul class="list-group">
                <li class="list-group-item">
                    <i class="fa fa-calendar-minus-o"></i> Due <span class="badge">0</span>
                </li>
                <li class="list-group-item">
                    <i class="fa fa-calendar-minus-o"></i> Over Due <span class="badge">0</span>
                </li>
            </ul>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/app/data/contract-manager.data.js"></script>
    <script src="~/Scripts/app/controller/contractController.js"></script>
}
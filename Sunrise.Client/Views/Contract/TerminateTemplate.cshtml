@using Sunrise.Client.Infrastructure.Extension
@model Sunrise.Client.Domains.ViewModels.ContractTerminateViewModel

@{
    var referenceNoProperties = new string[] { "placeholder='Enter Reference No'" };
}
<form class="form-horizontal" model-state-attribute>
    <div class="modal-header">
        <h5 class="modal-title">Contract Termination Approval</h5>
    </div>
    <div class="modal-body">
        @Html.NgHiddenFor(m => m.ContractId, "$ctrl.terminate")
        <div class="form-group">
            <label class="col-md-3">Contract No: </label>
            <div class="col-md-9">
                @Html.NgInputFor(m => m.ContractCode, "$ctrl.terminate", "text", new string[] { "disabled" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3">Reason:</label>
            <div class="col-md-9">
                @Html.NgTextAreaFor(m => m.Description, "$ctrl.terminate")
                @Html.NgValidateFor(m => m.Description, "$ctrl.terminate")
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3">Reference No:</label>
            <div class="col-md-9">
                @Html.NgInputFor(m => m.ReferenceNo, "$ctrl.terminate", "text", referenceNoProperties)
                @Html.NgValidateFor(m => m.ReferenceNo, "$ctrl.terminate")
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3">Password:</label>
            <div class="col-md-9">
                @Html.NgInputFor(m => m.PassCode, "$ctrl.terminate", "password", new string[] { "placeholder='Verify Password'" } )
                @Html.NgValidateFor(m => m.PassCode, "$ctrl.terminate")
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-success btn-sm" ng-click="$ctrl.save()">Ok</button>
            <button class="btn btn-danger btn-sm" ng-click="$ctrl.cancel()">Cancel</button>
        </div>
    </div>
</form>


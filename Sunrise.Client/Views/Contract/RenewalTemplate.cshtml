@using Sunrise.Client.Infrastructure.Extension
@model Sunrise.Client.Domains.ViewModels.ContractRegisterEditViewModel

<form class="form-horizontal" model-state-attribute>
    <div class="modal-header">
        <h4><i class="fa fa-file-image-o "></i> Contract Renewal - {{$ctrl.model.code}} </h4>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <label class="col-md-3 text-right">Tenant Name:</label><label class="col-md-9">{{$ctrl.model.name}}</label>
                </div>
                <div class="row">
                    <label class="col-md-3 text-right">Address:</label> <label class="col-md-9"><span class="label label-primary">{{$ctrl.model.address}}</span></label>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-md-3 text-right">Villa No:</label>
                    <label class="col-md-8">{{$ctrl.model.villaNo}}</label>
                </div>
                <div class="form-group">
                    <label class="col-md-3 text-right">Rental Type:</label>
                    <label class="col-md-8">{{$ctrl.model.rentalTypeDescription}}</label>
                </div>
                <div class="form-group">
                    <label class="col-md-3 text-right">Contract Type:</label>
                    <label class="col-md-8">{{$ctrl.model.contractStatusDescription}}</label>
                </div>
                <div class="form-group">
                    <label class="col-md-3 text-right">Period Start:</label>
                    <div class="col-md-8 text-right">
                        @Html.NgDatePickerFor(m => m.PeriodStart, "$ctrl.model", "0")
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 text-right">Period End:</label>
                    <div class="col-md-8">
                        @Html.NgDatePickerFor(m => m.PeriodEnd, "$ctrl.model", "1")
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 text-right">Amount:</label>
                    <div class="col-md-8">
                        @Html.NgInputFor(m => m.Amount, "$ctrl.model", "amount")
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button class="btn btn-success btn-sm" ng-click="$ctrl.save()"><i class="fa fa-save"></i> Save</button>
        <button class="btn btn-danger btn-sm" ng-click="$ctrl.dismiss()"><i class="fa fa-undo"></i> Cancel</button>
    </div>
</form>